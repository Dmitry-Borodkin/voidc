//    voidc_verify_jit_module_optimized(true);
//}

{   a: &unique_ptr_int := v_undef();
    v_initialize(&a);
    defer v_terminate(&a);

    a.ptr := v_malloc(int);

    *a := 777;

    printf("a: ");  print(a);

    N *= 2;

    b = v_alloca(unique_ptr_int, N);
    v_initialize(b, N);
    defer v_terminate(b, N);

    for (i: &int := 0; i < N; ++i)
    {
        b[i].ptr := v_malloc(int);

        *b[i] := 111 + i;
    }

    for (i: &int := 0; i < N; i += 2)
    {
        b[i] := b[i+1];
    }

    for (i: &int := 0; i < N; ++i)
    {
        printf("b[%d]: ", i);   print(b[i]);
    }
}



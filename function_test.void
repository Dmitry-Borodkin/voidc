{   buf = v_alloca(char, 100);

    N = 20;

    i = *v_alloca(int) := 0;

    loop
    {
        if (i >= N) v_break();

        sprintf(buf, "sin(%d): %g", i, sin(i));

        printf("buf: \"%s\"\n", buf);

        ++i;
    }


    j = *v_alloca(int) := 0;

    i := 0;

    loop
    {
        if (i >= N) v_break();

        foo(qwerty, i, j);

        printf("qwerty - i: %d, j: %d\n", i, j);

        ++i;
    }
}



{
    printf("sqrt(2): %g\n", sqrt(v_cast(2, double)));

    x = v_cast(1, double);

    printf("x: %g\n", x);

    printf("sin(x): %g\n", sin(x));
    printf("cos(x): %g\n", cos(x));

    printf("sqrt(sin(x)*sin(x) + cos(x)*cos(x)): %.99g\n",
            sqrt(
                v_binop(LLVMFAdd,
                    v_binop(LLVMFMul, sin(x), sin(x)),
                    v_binop(LLVMFMul, cos(x), cos(x))
                )
            )
          );
}



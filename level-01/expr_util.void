    }
    else
    {
        v_ast_make_expr_integer(idx, 0);        //- Sic!
    }

    tt = v_get_result_type();


    v_set_result_type(INVIOLABLE_TAG);

    v_ast_accept_visitor(v_cast(agg, v_ast_base_ptr), visitor);


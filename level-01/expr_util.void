                v_assign(t, v_load(v_getelementptr(v_type_struct_get_element_types(agg_t), i)));
            }
            else    //- assert(v_type_is_array(agg_t));
            {
                v_assign(t, v_type_array_get_element_type(agg_t));
            }
        }
    }

    v_set_result_type(tt);

    v_adopt_result(t, v);

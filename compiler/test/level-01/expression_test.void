{   v_export_symbol_type("rand", v_function_type(int, 0, 0, false));
}

{
    N = 20;

    i = *v_alloca(int) := 0;

    n = *v_alloca(int);
    c = *v_alloca(int);

    loop
    {
        if (i == N) v_break();

        n := rand();

        r = v_load(&n);

        c := 0;

        loop
        {
            if (n == 0) v_break();

            ++c;

            n &= n - 1;
        }

        printf("%X: %d\n", r, c);

        ++i;
    }

    printf("\n");
}



//{ v_debug_print_module(1); }
{
    N = 1000;

    flags = v_malloc(bool, N);

    i = *v_alloca(int) := 0;

    loop
    {
        if (i == N) v_break();

        flags[i] := true;

        ++i;
    }

    i := 2;

    k = *v_alloca(int);

    n = *v_alloca(double) := 0;

    loop
    {
        if (i >= N) v_break();

        if (flags[i])
        {
            n += 1;     //- ?..

            printf("%d, %g\n", i, n/i);

            k := 2*i;

            loop
            {
                if (k >= N) v_break();

                flags[k] := false;

                k += i;
            }
        }

        ++i;
    }

    v_free(flags);

    printf("\n");
}



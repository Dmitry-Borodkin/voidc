//{ v_debug_print_module(1); }
{
    N = 100;

    n = *v_alloca(int) := 1;

    v = *v_alloca(int);

    loop
    {
        if (n >= N) v_break();

        v := n;

        loop
        {
            printf("%d\n", v);

//          if (v < n)  v_break();
            if (v == 1) v_break();

            if (v & 1)  v := 3*v + 1;
            else        v := v/2;
        }

        printf("\n");

        ++n;
    }

}



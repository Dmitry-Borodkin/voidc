//- int QWERTY(int, char *);
//---------------------------------------------------------------------
{
    _char = v_find_type("char");
    _int  = v_find_type("int");

    arg0 = v_alloca(v_type_ptr, 2);
    arg1 = v_getelementptr(arg0, 1);

    char_ptr = v_pointer_type(_char, 0);

    v_store(_int,     arg0);
    v_store(char_ptr, arg1);

    ft = v_function_type(_int, arg0, 2, false);

    //-------------------------------------------------------------
    f = v_function_hack("QWERTY", ft);
    //-------------------------------------------------------------

    v_add_parameter_name(f, 0, "num", _int);
    v_add_parameter_name(f, 1, "str", char_ptr);
}

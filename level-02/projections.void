op_postfix_dot:     &v_ast_expr_t := v_undef();
op_postfix_tildato: &v_ast_expr_t := v_undef();

voidc_projections_internal_globals_cleaner: (*void) -> void
{
    v_terminate(&op_postfix_dot);
    v_terminate(&op_postfix_tildato);
}


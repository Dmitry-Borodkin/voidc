//---------------------------------------------------------------------
voidc_internal_static_type_projection_intrinsic: (aux: *void, vis: voidc_visitor_ptr,
                                                  self: v_ast_base_ptr,
                                                  t0: v_type_ptr, v0: LLVMValueRef
                                                  ) -> void
{
    type  = (v0: v_type_ptr);
    type_ = v_type_get_llvm_type(type);

    f = (aux: *((LLVMTypeRef) -> LLVMValueRef));

    v = f(type_);

    v_adopt_result(size_t, v);
}


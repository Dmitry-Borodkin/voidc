sin: (double) ~> double;
cos: (double) ~> double;

M_PI = 3.14159265358979323846264338327950288419716939937510582;


//---------------------------------------------------------------------
U: complex = { 1, 0 };
I: complex = { 0, 1 };

//{ v_debug_print_module(1); }
{
    alpha = M_PI / 180;

    a: complex = {cos(alpha), sin(alpha)};

    z: &complex := U;

    for (i: &int := 0; i <= 360; ++i)
    {
        if (i%30 == 0)  printf("(%g, %g)\n", z[0], z[1]);

        z *= a;
    }
}



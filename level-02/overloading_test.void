    printf("a != b : %d\n", (a != b : int));
    printf("a <  b : %d\n", (a <  b : int));
    printf("a <= b : %d\n", (a <= b : int));
    printf("a >  b : %d\n", (a >  b : int));
    printf("a >= b : %d\n", (a >= b : int));

    v: &number := { 0 };

    for (i: &int := 0; i < 12; ++i)
    {
        r = a < v < b;

        printf("a < { %g } < b : %d\n", v[0], (r : int));

        v += a;
    }
}



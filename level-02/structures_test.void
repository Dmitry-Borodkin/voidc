struct qwerty_t
{
    x: int;             //- 0
    y: long;            //- 1

    p: *qwerty_t;       //- 2

    *const char;        //- 3 ...
};


s: &qwerty_t;

r: &qwerty_t := { 77, 999, &s, "r" };

s: &qwerty_t := { 7, 19, &r, "s" };


//---------------------------------------------------------------------
{
    q: &qwerty_t := s;

    q.y += r.p->y;

    printf("q: { x: %d, y: %ld, _, \"%s\" }\n", q.x, q.y, q[3]);

}


